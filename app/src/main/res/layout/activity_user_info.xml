<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:src="@drawable/ic_cloud_circle_black_24dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Air Quality"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:textColorHighlight="#ff000000"
                android:textSize="35sp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView

            android:layout_margin="35dp"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="User Info"
                    android:textStyle="italic"
                    android:textSize="30sp"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/info_firstname"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:textStyle="italic"
                    android:textColorHint="#ff000000"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:hint=" Firstname"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/info_lastname"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:textStyle="italic"
                    android:textColorHint="#ff000000"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:hint=" Lastname"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/info_email"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:textStyle="italic"
                    android:textColorHint="#ff000000"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:hint="User Email"
                    android:padding="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/info_back"
                    android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                    android:background="@drawable/buttonstyles"
                    android:textColor="#ff000000"
                    android:layout_marginTop="25dp"
                    android:text="Back to menu"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

</LinearLayout>